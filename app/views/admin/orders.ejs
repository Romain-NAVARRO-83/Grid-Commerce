<%- include('./partials/head') %>
    <%- include('./partials/nav') %>

        <main>
            <h1>Orders</h1>
            <section>
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Reference</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>State</th>
                            <th>id</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.orders.forEach(order=> {%>
                            <tr>
                                <td>
                                    <%= order.id %>
                                </td>
                                <td>
                                    <%= order.reference %>
                                </td>
                                <td>
                                    <%= order.date_creation %>
                                </td>
                                <td>
                                    <%= order.total_price %>
                                </td>
                                <td>
                                    <%= order.state %>
                                </td>
                                <td>
                                    <%= order.id %>
                                </td>
                                <td>
                                    <button class="modalToggler" data-orderId="<%= order.id %>"><i class="fa fa-pencil"></i></button>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </section>
            <div id="orderModal" class="modal">
                <button class="modalToggler special"><i class="fa-solid fa-xmark"></i></button>
                <section class="gap">
                    <div class="l8">
                        <h2>Reference <span class="small">id</span></h2>
                    <p>Date</p>
                    </div>
                    <div class="l4">
                        <h3><%=  orders[0].customer.first_name%> <%=  orders[0].customer.last_name%></h3>
                        <a href="#" class="customeremail">customer email</a>
                    </div>
                </section>
                <section id="orderDetail" class="gap">
                    <table class="l9">
                        <thead>
                            <th>Ref</th>
                            <th>Name</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                    <div class="l3 text-center">
                        <% let total = 0;
                        orders[0].orderDetail.forEach(productLine => {total += productLine.quantity * productLine.unit_price });%>
                        <span class="bigNumber"><%= new Intl.NumberFormat({ style: "currency", currency: "EUR" }).format(total) %> â‚¬</span>
                    </div>
                </section>
                <section id="orderShipping" class="gap">
                    <h3>Manage shipments</h3>
                    <table id="prepareBoard" class="l6">
                        <thead>
                            <th>Id</th>
                            <th>Reference</th>
                            <th>Purchased</th>
                            <th>Sent</th>
                            <th>Leftover</th>
                            <th>Available</th>
                            <th>Send</th>
                        </thead>
                        <tbody>
                  
                        </tbody>
                    </table>
                    <div id="shipmentBoard"class="l6">
                        <h4>Your shipment</h4>
                        <form action="/api/sendShipment" method="POST" >
                            <input type="hidden" name="orderId" value="<%= orders[0].id %>">
                            <div class="gap"></div>
                            <button>Send</button>
                        </form>
                    </div>
                    <h4>Previous shipments</h4>
                    <ul id="shipmentsList">
                        
                    </ul>
                </section>
                
            </div>


        </main>
        <%- include('./partials/foot') %>